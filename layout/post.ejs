<div id="greeter" class="no_copy">
  <h1 id="title"><%= page.title %></h1>
  <div id="tag_container">
    <% page.tags.each(function(tag){ %>
    <div class="tag"><a href="<%- url_for(tag.path) -%>"><%= tag.name %></a></div>
    <% }) %>
  </div>
  <div id="date"><%- date(page.date, "MM / DD / YYYY") %> (最后编辑于 <%- date(page.updated, "MM / DD / YYYY")%>)</div>
  <div id="reading_time">预计阅读时间 <%- readingTime(page.content, " 分钟", 75) %></div>

</div>

<div class="seperator">
  <main><%- page.content %></main>
</div>

<% if (page.comment) { %>
<div class="seperator">
  <div id="comment">
    <script src="https://utteranc.es/client.js" repo="<%= theme.post.comment.repo %>" issue-term="pathname" theme="preferred-color-scheme" crossorigin="anonymous" async>
    </script>
  </div>
</div>
<% } %>