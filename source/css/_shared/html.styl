@import "variables.styl"
@import "snippet/background.styl"

html {
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	font-family: 'Noto Sans SC', sans-serif;
	color: default_color;

	body {
		width: @width;
		height: @height;
		margin: @margin;
		padding: @padding;

		&:before {
			content: '';
			position: fixed;
			width: @width;
			height: @height;
			top: 0;
			left: 0;
			// background: no-repeat center / cover url(hexo-config('background.jpeg')); // fallback on Microsoft Edge
				// // avif unusable on edge, disable for now
				// url(hexo-config('background.avif')),
				// // and you can compress a jpeg file to a very small size with almost no significant loss!
				// url(hexo-config('background.webp')),
			background: no-repeat center / cover image-set(

				url(hexo-config('background.jpeg'))
			);
			background-color: #555555;
			z-index: -1;
		}

		header {
			position: fixed;
			top: 0.5em;
			right: 0;
			z-index: 1;

			.header_button {
				width: 1.5em;
				height: 1.5em;
				margin: 0.5em 1em 0.5em 1em;
				padding: 0.3em;
				border-radius: 100%;
				cursor: pointer;
				{background-blur-thin};

				.button_link, .button_icon {
					width: @width;
					height: @height;
				}
			}
		}

		#greeter {
			width: 100%;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;

			div, h1 {
				max-width: 95%;
				word-wrap: break-word;
			}
		}

		footer {
			padding: 0.5em;
			position: relative;
			left: 0;
			right: 0;
			background-color: #222222;

			#copyright, #credit, a, #license {
				margin: 0.1em;
				text-align: center;
				text-decoration: none;
				color: #666666;
			}
		}
	}

	.no_copy {
		user-select: none;
	}

	.no_drag {
		-webkit-user-drag: none;
	}

	.no_deco {
		text-decoration: none;
	}
}
