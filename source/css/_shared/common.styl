user-select() {
	user-select: arguments;
	-webkit-user-select: arguments;
	-moz-user-select: arguments;
}

background-blur =
	box-shadow: 0px 0px 2em #000000;
	@supports (backdrop-filter: saturate(150%) contrast(70%) blur(8px)) {
		background-color: rgba(0, 0, 0, 0.3);
		backdrop-filter: saturate(150%) contrast(70%) blur(8px);
		-webkit-backdrop-filter: saturate(150%) contrast(70%) blur(8px);
	}

	@supports not (backdrop-filter: saturate(150%) contrast(70%) blur(8px)) {
		background-color: rgba(48, 48, 53, 1);
	}

html {
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	font-family: 'Noto Sans SC', sans-serif;
	color: #EAEAEA;

	body {
		width: @width;
		height: @height;
		margin: @margin;
		padding: @padding;

		&:before {
			content: '';
			position: fixed;
			width: @width;
			height: @height;
			top: 0;
			left: 0;
			background: no-repeat center / cover url(hexo-config('background'));
			background-color: #555555;
			z-index: -1;
		}

		header {
			position: fixed;
			top: 0.5em;
			right: 0;
			z-index: 1;

			.header_button {
				width: 1.5em;
				height: 1.5em;
				margin: 0.5em 1em 0.5em 1em;
				padding: 0.3em;
				border-radius: 100%;
				cursor: pointer;
				{background-blur};

				.button_link, .button_icon {
					width: @width;
					height: @height;
				}
			}
		}

		footer {
			padding: 0.5em;
			position: relative;
			left: 0;
			right: 0;
			background-color: #222222;

			#copyright, #credit, a, #license {
				margin: 0.1em;
				text-align: center;
				text-decoration: none;
				color: #666666;
			}
		}
	}

	.no_copy {
		user-select: none;
	}

	.no_drag {
		-webkit-user-drag: none;
	}

	.no_deco {
		text-decoration: none;
	}
}
