@import '_shared/common.styl';

html {
	body {
		#greeter {
			// width: 100%;
			// display: flex;
			// flex-direction: column;
			// align-items: center;
			// justify-content: center;
			height: 80%;
			min-height: 7em;

			#title {
				color: greeter_color;
				text-shadow: 1px 1px 8px #666666;
				font-size: 400%;
				font-family: sans-serif;
			}

			#slogan {
				color: greeter_color_thin;
				text-shadow: 1px 1px 8px #666666;
				font-weight: 500;
				margin-top: 1em;
			}
		}

		main {
			margin-bottom: 3em;
			padding: 0 1em;
			min-height: 20em;
			z-index: 1;

			#postsContainer {
				min-height: @min-height;
				z-index: @z-index;
				margin: 0 auto;
				max-width: 40em;
				padding: 1em 1em 1em 1em;
				border-radius: 1em;
				{background-blur-thick};

				.Post {
					color: inherit;
					text-decoration: none;

					.PostTitle {
						text-align: left;
						font-size: 1.2em;
						font-weight: bold;
					}

					.PostSummary {
						text-align: left;
						margin-left: 2em;
						margin-right: 2em;
						min-height: 3em;
						color: #E0E0E0;
					}

					.PostDate {
						text-align: right;
						color: #BBBBBB;
					}
				}
			}
		}
	}
}