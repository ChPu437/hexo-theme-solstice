@import '_shared/common.styl';

@font-face {
	font-family: 'JetBrains Mono';
	src: url('/font/JetBrains_Mono/JetBrainsMono-Regular.eot');
	src: url('/font/JetBrains_Mono/JetBrainsMono-Regular.eot?#iefix') format('embedded-opentype'), url('/font/JetBrains_Mono/JetBrainsMono-Regular.woff2') format('woff2'), url('/font/JetBrains_Mono/JetBrainsMono-Regular.woff') format('woff'), url('/font/JetBrains_Mono/JetBrainsMono-Regular.ttf') format('truetype');
	font-style: normal;
}

html {
	body {
		#tag_container {
			margin: 1em 1em;
			display: flex;
			flex-direction: row;
			flex-wrap: wrap;
			align-items: center;
			justify-content: center;

			.tag {
				margin: 0.1em 0.3em;
				padding: 0.1em 0.3em;
				border-radius: 0.3em;
				font-size: 0.9em;
				background-color: rgba(0, 0, 0, 0.3);
				backdrop-filter: saturate(150%) contrast(70%) blur(8px);
				-webkit-backdrop-filter: saturate(150%) contrast(70%) blur(8px);
			}
		}

		#greeter {
			width: 100%;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			height: 40%;
			min-height: 10em;
			color: #F8F8F8;

			#title {
				color: @color;
				text-shadow: 1px 1px 8px #666666;
				font-weight: 400;
				font-family: sans-serif;
				font-size: 3em;
			}

			#date {
				color: @color;
				font-weight: bold;
				text-shadow: 1px 1px 8px #666666;
			}

			#reading_time {
				color: @color;
				font-weight: bold;
				text-shadow: 1px 1px 8px #666666;
			}
		}

		.seperator {
			margin: 0 1em;
		}

		main {
			margin: 0 auto 3em;
			max-width: 40em;
			min-height: 40em;
			padding: 0.3em 1em 1em;
			border-radius: 1em;
			background-color: rgba(0, 0, 0, 0.3);
			backdrop-filter: saturate(150%) contrast(100%) blur(8px);
			-webkit-backdrop-filter: saturate(150%) contrast(100%) blur(8px);

			// text style
			hr { // seperate line
				background-color: rgb(196, 196, 196, 1);
				border: none;
				width: 90%;
				height: 1px;
			}

			blockquote {
				border-left: 0.2em solid rgb(100, 100, 100);
				padding-left: 0.2em;
				margin-left: 0.2em;
				color: #CCCCCC;
				font-weight: 500;
			}

			p code { // inline code
				margin: 0 0.3em;
				padding: 0.1em 0.3em;
				border-radius: 0.3em;
				background: border-box rgb(36, 40, 47, 1);
				font-family: 'Jetbrains Mono', monospace;
				font-size: 0.9em;
				tab-size: 4em;
			}

			pre { // codeblock
				margin: 0.3em;
				padding: 0;
				border-radius: 0.3em;
				background: border-box rgb(36, 40, 47, 1);
				overflow-x: auto;

				code {
					background: @background;
					border-radius: @border-radius;
					font-family: 'Jetbrains Mono', monospace;
					font-size: 0.9em;
					tab-size: 4em;
					overflow-x: auto;
				}
			}

			img {
				display: block;
				margin: 0 auto;
				max-width: 30em;
			}

			table {
				margin: 0 auto;
			}

			.center {
				text-align: center;
			}

			.serif {
				font-family: 'Noto Serif CJK SC', serif;
				font-weight: 600;
			}

			.spoiler {
				background-color: #EAEAEA;
			}

			.right {
				text-align: right;
			}
		}

		#comment {
			margin: 0 auto 3em;
			max-width: 40em;
			min-height: 10em;
			padding: 0 1em;
			border-radius: 1em;
			background-color: rgba(0, 0, 0, 0.3);
			backdrop-filter: saturate(150%) contrast(100%) blur(8px);
			-webkit-backdrop-filter: saturate(150%) contrast(100%) blur(8px);
		}
	}
}