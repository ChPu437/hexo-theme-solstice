@import '_shared/common.styl';
@import '_shared/common_text.styl';

@font-face {
	font-family: 'JetBrains Mono';
	src: url('/font/JetBrains_Mono/JetBrainsMono-Regular.eot');
	src: url('/font/JetBrains_Mono/JetBrainsMono-Regular.eot?#iefix') format('embedded-opentype'), url('/font/JetBrains_Mono/JetBrainsMono-Regular.woff2') format('woff2'), url('/font/JetBrains_Mono/JetBrainsMono-Regular.woff') format('woff'), url('/font/JetBrains_Mono/JetBrainsMono-Regular.ttf') format('truetype');
	font-style: normal;
}


html {
	body {
		#greeter {
			// width: 100%;
			// display: flex;
			// flex-direction: column;
			// align-items: center;
			// justify-content: center;
			// height: 40%;
			min-height: 10em;

			#title {
				color: greeter_color;
				text-shadow: 1px 1px 8px #666666;
				font-weight: 400;
				font-family: sans-serif;
				font-size: 2.8em;
				margin-bottom: 0.5em;
			}

			#tag_container {
				margin: 0 1em;
				display: flex;
				flex-direction: row;
				flex-wrap: wrap;
				align-items: center;
				justify-content: center;

				.tag {
					margin: 0.1em 0.3em;
					padding: 0.1em 0.3em;
					border-radius: 0.3em;
					font-size: 0.9em;
					{background-blur-thin};

					a {
						text-decoration: none;
						color: greeter_color;
					}
				}
			}

			#date {
				color: greeter_color;
				font-weight: bold;
				text-shadow: 1px 1px 8px #666666;
				margin-top: 0.5em;
			}

			#reading_time {
				color: greeter_color;
				font-weight: bold;
				text-shadow: 1px 1px 8px #666666;
				margin-bottom: 1em;
			}
		}

		.seperator {
			margin: 0 1em;
		}

		main {
			margin: 0 auto 3em;
			max-width: 40em;
			min-height: 40em;
			padding: 0.3em 1em 1em;
			border-radius: 1em;
			{background-blur-thick};

			// text style

			h1, h2, h3, h4, h5, h6 {
				margin-top: 0.5em;
				margin-bottom: 0.1em;
			}
			h1 {
				font-size: 1.7em;
			}
			h2 {
				font-size: 1.4em;
			}
			h3 {
				font-size: 1.3em;
			}

			hr { // seperate line
				background-color: rgb(196, 196, 196, 1);
				border: none;
				width: 90%;
				height: 1px;
			}

			ol, ul {
				margin: auto;
			}

			blockquote {
				border-left: 0.2em solid rgb(100, 100, 100);
				padding-left: 0.2em;
				margin-left: 0.2em;
				color: #CCCCCC;
				font-weight: 500;
			}

			p {
				margin: auto;
			}

			p code, li code { // inline code
				margin: 0 0.3em;
				padding: 0.1em 0.3em;
				border-radius: 0.3em;
				background: border-box rgb(36, 40, 47, 1);
				font-family: 'Jetbrains Mono', monospace;
				font-size: 0.9em;
				tab-size: 4em;
			}

			pre { // codeblock
				margin: 0.3em;
				padding: 0;
				border-radius: 0.3em;
				background: border-box rgb(36, 40, 47, 1);
				overflow-x: auto;

				code {
					background: @background;
					border-radius: @border-radius;
					font-family: 'Jetbrains Mono', monospace;
					font-size: 0.9em;
					tab-size: 4em;
					overflow-x: auto;
				}
			}

			img {
				display: block;
				margin: 0.5em auto;
				width: 30em;
				max-width: 100%;
			}

			table {
				margin: 0 auto;
			}

			.center {
				text-align: center;
			}

			.serif {
				font-family: 'Noto Serif CJK SC', serif;
				font-weight: 600;
			}

			.spoiler {
				background-color: #EAEAEA;
				transition: hover_delay ease-in-out background-color;

				&:hover {
					background-color: unset;
				}
			}

			.right {
				text-align: right;
			}
		}

		#comment {
			margin: 0 auto 3em;
			max-width: 40em;
			min-height: 10em;
			padding: 0 1em;
			border-radius: 1em;
			{background-blur-thick};
		}
	}
}
